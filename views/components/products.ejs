<section class="section-products">
  <div class="container">
      <div class="row justify-content-center text-center">
          <div class="col-md-8 col-lg-6">
              <div class="header">
                  <h3>Featured Product</h3>
                  <h2>Popular Products</h2>
              </div>
          </div>
      </div>
      <div class="row">

        <%if(products && products.length > 0){%>
          <% for(product of products) {%>

          <!-- Single Product -->
          <div class="col-md-6 col-lg-4 col-xl-3">
              <div id="product-1" class="single-product">
                  <div class="part-1">
                    <img src="<%= product.image%>" alt="">
                    <form action="/cart" method="POST">
                      <input type="hidden" name="amount" class="form-control" value="1" />
                      <input type="hidden" name="title" value="<%= product.title%>"/>
                      <input type="hidden" name="price" value="<%= product.price%>"/>
                      <input type="hidden" name="image" value="<%= product.image%>"/>
                      <input type="hidden" name="description" value="<%= product.description%>"/>
                      <input type="hidden" name="productId" value="<%= product.id%>"/>
                      <input type="hidden" name="redirectTo" value="/product/<%= product.id%>"/>
                      <ul>
                        <li><a><button class="btn p-0 m-0" type="submit"><i class="fas fa-shopping-cart"></i></button></a></li>
                          <li><a href="#"><i class="fas fa-heart"></i></a></li>
                          <li><a href="/product/<%=product.id%>"><i class="fas fa-expand"></i></a></li>
                      </ul>
                    </form>
                  </div>
                  <div class="part-2 text-center">
                      <h3 class="product-title"><%= product.title.slice(0,20) %></h3>
                      <h4 class="product-old-price">$<%= ((product.price * 0.15) + product.price).toFixed(2) %></h4>
                      <h4 class="product-price text-primary">$<%=product.price%></h4>
                  </div>
              </div>
          </div>

          <%}%>
          <%}else{%>
            <div class="alert alert-danger text-center">
              There is no products
            </div>
          <%}%>

      </div>
  </div>
</section>



